<% include partials/header %>

<h1>Add an Item to List</h1>
<form method="post" action="/list/add">
	<label>Item Name</label><br>
	<input type="text" name="item_name" required=""><br>

	<label>Item quantity</label><br>
	<input type="number" name="item_quantity" required=""><br><br>

	<input type="submit" name="submit" value="Add">
</form>

<h1><%= title %></h1>
<ul>
<% list_items.forEach(function(list){ %>
	<li><%= list.item_name  %> (<%= list.item_quantity 
	 %>)</li>
 <% }); %>
	
	
</ul>
<% include partials/footer %>